<div id="<%= dom_id category %>">

      <tr class="">
        <td scope="row"><%= category.name %></td>
        <td><%= category.description %></td>
        <td>
        <div class="btn-group" role="group" aria-label="Basic example">
          <%= link_to "Ver", category_path(category.id), class:"btn btn-primary" %>
          <%= link_to "Editar", edit_category_path(category.id), class:"btn btn-warning" %>
          <%= button_to "Destruir", category_path(category.id), method: :delete, data: { confirm: '¿Estás seguro?' }, class:"btn btn-danger" %>
        </div>
</td>
      </tr>

</div>
