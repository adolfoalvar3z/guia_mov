                                <th>Marca</th>
                                <th>Modelo</th>
                                <th>Codigo Interno</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                <td style="width:10%;"><input type="number" class="form-control" readonly="" required="" name="id1" id="id1"></td>
                                <td>
                                <input class="form-control" type="text" id="producto1" name="producto1" onchange="busquedaproducto1()" list="movies">
