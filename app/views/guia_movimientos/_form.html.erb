                                  <option value=" UPS">Abrelex - UPS - AB-ES752CI</option>
                                </datalist>
                                    </td>
                                    <td><%= form.number_field :cantidad , class:"form-control", min:"0" %></td>
                                    <td><%= form.text_field :marca , class:"form-control" %></td>
                                    <td><%= form.text_field :modelo , class:"form-control" %></td>
                                    <td><%= form.text_field :serie , class:"form-control" %></td>
                                    </tr>
  </tbody>
